@model User
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/StyleLogin.css">

<input type="hidden" id="errorMessage" value="@ViewBag.ErrorMessage" />
<div class="d-flex justify-content-center">
<h1>@ViewData["Title"]</h1>
</div>
<br />

<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Login" asp-action="Login" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!-- Email input -->
    <div class="form-group" >
        <label asp-for="Email" class="control-label"></label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email" />       
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Password input -->
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input type="Password" asp-for="Password" class="form-control" placeholder="Enter Password" />        
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>   
            <!-- Simple link -->
            <br />
            <div class="d-flex justify-content-center">               
                <a asp-controller="User" asp-action="EmailExists">Forgot password?</a>
            </div>
            <br />
            <!-- Submit button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
            </div>
            <br />   
    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a asp-controller="User" asp-action="Create">Register</a></p>
    </div>
</form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Login.js" asp-append-version="true"></script>



