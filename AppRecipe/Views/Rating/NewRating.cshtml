@{
    ViewData["Title"] = "Comment";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="/css/StyleLogin.css">
<link rel="stylesheet" href="/css/StyleIndex.css">
<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center">
    <div>
        <ul class="list-group">
            <li class="list-group-item active">Comment</li>
        </ul>
        <br />
        <form asp-controller="Rating" asp-action="NewRating" method="post" class="rating-form">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <ul class="avaliacao" id="avaliacao-stars">
                <div class="rating">
                    <input type="radio" id="star5" name="rating" value="Excelente" /><label for="star5" title="Excelente">5 estrelas</label>
                    <input type="radio" id="star4" name="rating" value="Bom" /><label for="star4" title="Bom">4 estrelas</label>
                    <input type="radio" id="star3" name="rating" value="Médio" /><label for="star3" title="Médio">3 estrelas</label>
                    <input type="radio" id="star2" name="rating" value="Ruim" /><label for="star2" title="Ruim">2 estrelas</label>
                    <input type="radio" id="star1" name="rating" value="Muito Ruim" /><label for="star1" title="Muito ruim">1 estrela</label>
                </div>
            </ul>
            <label for="comment">Comment:</label>
            <textarea id="comment" name="comment" rows="4" cols="50" required></textarea>
            <br />
            <input class="text-center" type="submit" value="Submit">
        </form>

    </div>
</div>
<br />

<div class="d-flex justify-content-center">
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
