@model User

<h1>delete user</h1>

<p>Are you sure you want to delete the user @Model.Name (@Model.Email)?</p>

<form asp-controller="User" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("ListUsers", "User")" class="btn btn-secondary">Back to list</a>
</form>
